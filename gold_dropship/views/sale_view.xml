<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_inherit_po_info_wiz" model="ir.ui.view">
        <field name="name">view.sale.order.inheri</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']/button[@name='action_view_invoice']" position="before">
                <button class="oe_stat_button" name="action_view_purchase_orders_related" type="object"
                        icon="fa-credit-card"
                        invisible="payment_method != 'gold' and not po_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Purchase</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="payment_method"/>
                <field name="po_id" invisible="True"/>
            </xpath>

        </field>
    </record>


</odoo>

