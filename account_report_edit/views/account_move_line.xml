<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.inherit.gold</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="debit_gold" optional="hide" string="Debit Gold(g)"/>
                <field name="credit_gold" optional="hide" string="Credit Gold(g)"/>
                <field name="balance_gold" optional="hide" string="Balance Gold(g)"/>
            </xpath>
        </field>
    </record>
    
</odoo>